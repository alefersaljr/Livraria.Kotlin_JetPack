<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/model_item_recycle_view"
              android:layout_margin="@dimen/margin_item_listner">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_item_book"
            android:textStyle="bold"
            android:paddingLeft="@dimen/paddin_item_book"
            android:layout_margin="@dimen/margin_item_book"/>

    <TextView
            android:id="@+id/textViewAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_item_autor"
            android:textStyle="italic"
            android:paddingLeft="@dimen/paddin_left_item_autor"
            android:layout_margin="@dimen/margin_item_autor"
            android:paddingBottom="@dimen/paddin_bottom_autor"/>

</LinearLayout>